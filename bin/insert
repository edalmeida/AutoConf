#!/bin/bash

export PATH="${PATH}:/home/lbd/hadoop/ramiro/c3sl/AutoConf/bin/"

match=1
disk=sda
net_device=eth0

cd /tmp/autoconf/jobs/
for machine in $(cat /tmp/out); do
    cd $machine
    { for file in *.net;  do
        sys2csv -n $file $machine $match $net_device
    done } &

    { for file in *.cpu;  do
        sys2csv -s $file $machine $match
    done } &

    { for file in *.disk; do
        sys2csv -i $file $machine $match $disk
    done } &

    { for file in *.mem;  do
        sys2csv -v $file $machine $match
    done } &
    cd ..
done
cd -
